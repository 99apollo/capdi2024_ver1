<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/manufacturerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="제조사"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintEnd_toStartOf="@+id/priceTextView"
        app:layout_constraintTop_toTopOf="@+id/nameTextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/manufacturerTextView"
        app:layout_constraintEnd_toStartOf="@+id/amountTextView"
        app:layout_constraintTop_toTopOf="@+id/manufacturerTextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수량"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/priceTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manufacturerTextView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
