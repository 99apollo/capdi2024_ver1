<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/purchase_date_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="구매일"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/purchase_item_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purchase_item_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/purchase_price_text_view"
        app:layout_constraintStart_toEndOf="@+id/purchase_date_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purchase_price_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/purchase_quantity_text_view"
        app:layout_constraintStart_toEndOf="@+id/purchase_item_name_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purchase_quantity_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="수량"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/purchase_price_text_view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
